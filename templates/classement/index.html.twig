            <thead>
            <tr>
                <th class="td-position">Pos.</th>
                <th class="td-flag"></th>
                <th class="td-club">Pilote</th>
                <th class="td-point">Points</th>
            </tr>
            </thead>
            <tbody>
            {% for pilote in pilotes|sort((a,b)=> b.point <=> a.point)  %}
